{
  "name": "dc-extension-product-selector",
  "version": "0.3.1",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@amplience/sap-product-browser": "^1.0.0",
    "@commercetools/sdk-auth": "^3.0.5",
    "@material-ui/core": "^4.6.0",
    "@material-ui/icons": "^4.5.1",
    "dc-extensions-sdk": "^1.1.0",
    "dc-management-sdk-js": "^1.18.0",
    "framer-motion": "^1.6.17",
    "lodash": "^4.17.15",
    "qs": "^6.9.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-redux": "^7.1.3",
    "react-scripts": "3.4.1",
    "react-sortablejs": "^1.5.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "sass": "^1.62.1",
    "sortablejs": "^1.10.1"
  },
  "scripts": {
    "start": "HTTPS=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --watchAll=false",
    "test:auto": "react-scripts test",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/index.js",
      "!src/utils/**.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.4",
    "@types/jest": "^24.0.23",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "jest-enzyme": "^7.1.2",
    "redux-mock-store": "^1.5.4",
    "sinon": "^8.1.1"
  }
}
